@page
@model MyUploadPage.Pages.Docs.IndexModel
@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>File Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Docs)
    {
        <tr>
            <td>@i</td>
            <td>@item.FileName</td>
            <td>
                <a asp-action="GetFile" asp-controller="Doc" asp-route-id="@item.Id" asp-route-filename="@item.FileName" class="btn btn-primary">Download</a>
            </td>
        </tr>

        i++;
    }

</table>

